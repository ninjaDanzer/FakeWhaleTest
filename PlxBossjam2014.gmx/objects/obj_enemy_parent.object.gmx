            <string>///Enemy behaviour code
//STATES
// 0 = Idle
// 1 = Suspicious
// 2 = Surprised
// 3 = Sound alarm
// 4 = Attack player
// 5 = Shoot player, all is lost
//TYPES
// 0 = stands still
// 1 = patrols
//MOVEDIR
// -1.0 = left
// 0 = stand still
// 1.0 = right

//Guard or patrol
if(state == 0) {
    if(type == 0) {
        if( (xstart+10) &lt; x) {
            image_xscale = -1;
            movedir = -1.0;
        }
        else if( (xstart-10) &gt; x) {
            image_xscale = 1;
            movedir = 1.0;
        }
        else {
            movedir = 0;
        }
        
    }
    else if(type == 1) {
        if( place_free(x + 10, y) ) {
            movedir = -1.0;
            image_xscale = -1;
        }
        else if( place_free(x - 10, y) ) {
            movedir = 1.0;
            image_xscale = 1;
        }
    }
    if(abs(x - obj_player.x) &lt; 600 and ((x &lt; obj_player.x and image_xscale = 1) or (x &gt; obj_player.x and image_xscale = -1)) and !obj_player.PlayerHidden and (y &gt; obj_player.y - 500 and y &lt; obj_player.y + 50)) {
        state = 3;
    }
    speed_modifier = 1.5;
    interacts = 0;
}

//Move towards player carefully.
if(state == 1) {
    if( (alarm[1] &lt;= 0 )) {
        alarm[1] = room_speed * 10;
    }
    if( noise_source_x &lt; x) {
        movedir = -1.0;
        image_xscale = -1;
    }
    else {
        movedir = 1.0;
        image_xscale = 1;
    }
    if(abs(x - obj_player.x) &lt; 600 and ((x &lt; obj_player.x and image_xscale = 1) or (x &gt; obj_player.x and image_xscale = -1)) and !obj_player.PlayerHidden and (y &gt; obj_player.y - 500 and y &lt; obj_player.y + 50)) {
        state = 2;
    }
    speed_modifier = 1.0;
    interacts = 0;
}

//The enemy is surprised, and soon goes into attack mode
if(state == 2) {
    if( (alarm[1] &lt;= 0 )) {
        alarm[1] = room_speed * 10;
    }
    if( (alarm[0] &lt;= 0 )) {
        alarm[0] = room_speed * 2;
    }
    speed_modifier = 0;
    interacts = 0;
}

//Enemy is trying to find an alarm, if there isn't any on current level it will go to state 4
if(state == 3) {
    if( (alarm[1] &lt;= 0 )) {
        alarm[1] = room_speed * 10;
    }
    nearest_alarm = instance_nearest(x,y,obj_alarm);
    if( nearest_alarm == noone or ( (nearest_alarm.y &gt; y+224) || (nearest_alarm.y &lt; y-224) ) or global.alarm_on == 1 ) {
        state = 4;
    }
    else {
        if( nearest_alarm.x &lt; x) {
            movedir = -1.0;
            image_xscale = -1;
        }
        else {
            movedir = 1.0;
            image_xscale = 1;
        }
    }
    speed_modifier = 1.25;
    interacts = 1;
}

//Try to find and murder player
if(state == 4) {
    if( (alarm[1] &lt;= 0 ) or (abs(x - obj_player.x) &lt; 1000 and ((x &lt; obj_player.x and image_xscale = 1) or (x &gt; obj_player.x and image_xscale = -1)) and !obj_player.PlayerHidden and (y &gt; obj_player.y - 500 and y &lt; obj_player.y + 50))) {
        alarm[1] = room_speed * 10;
    }
    if( obj_player.x &lt; x) {
        movedir = -1.0;
        image_xscale = -1;
    }
    else {
        movedir = 1.0;
        image_xscale = 1;
    }
    
    if (abs(x - obj_player.x) &lt; 300 and ((x &lt; obj_player.x and image_xscale = 1) or (x &gt; obj_player.x and image_xscale = -1)) and !obj_player.PlayerHidden and (y &gt; obj_player.y - 500 and y &lt; obj_player.y + 50)) {
        state = 5;
        sprite_index = sp_guard_raise_gun;
        image_index = 0;
        image_speed = 0.2;
        movedir = 0;
    }
    
    speed_modifier = 1.5;
    interacts = 1;
}

if (state == 5) {
    if (image_index == image_number - 1 and alarm[4] &lt;= 0) {
        image_speed = 0;
        alarm[4] = room_speed / 2;
    }
}

x += 1 * movedir * speed_modifier;
